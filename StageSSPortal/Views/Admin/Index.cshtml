@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Administratorportaal";
}
@Styles.Render("~/Content/Admin.css")
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        checkPasswd();
        
       // checkForVms(); 
    });
    function LoadServers() {
        
        $.ajax("/api/ssh/getServers", {
            type: "GET",
            dataType: "json"
        }).done(function (data) {
            if (data == true) {
                checkForVms();
            }
        })
    }
    function checkPasswd() {

        $.ajax("/api/SSH/checkPasswd", {
            type: "GET",
            dataType: "json"
        })
            .done(function (data) {
                if (data == false) {
                   // alert("test")
                    InsertPasswd();
                }
                else
                {
                    LoadServers();
                }
            })
    }
    function InsertPasswd() {
        var passwd;
        while (passwd == "" || passwd == null) {
            passwd = prompt("Geef het password");
            //alert(passwd);
        }
        $.ajax("/api/SSH/InsertPasswd/" + "'" + passwd + "'" + "/", {
            type: "POST",
            dataType: "json"
        }).done(function (data) {
            if (data == true) {
                LoadServers();
            }
        })
    } 

    function checkForVms() {
        var redirect = false;
        $.ajax("/api/SSH/CheckVms", {
            type: "GET",
            dataType: "json"
        }).done(function (data) {
            $.each(data, function (index, value) {
                if (value.KlantId == 0) {
                    redirect = true;               
                }
            })
            if (redirect == true) {
                alert("Er zijn machines die nog moeten worden toegewezen!")
            }
        })
    }
    

    $('#Dialog-Box').dialog({
        autoOpen: false,
        height: 500,
        width: 700,
        modal: false
    });
    function OpenDialog() {
        loadKlanten();
        $('#Dialog-Box').dialog('open');
    }
    function loadKlanten() {
        $("select").show();
        $("#btnSave").show();
        $.ajax("/api/SSH/Klanten", {
            type: "GET",
            dataType: "json"
        })
            .done(function (data) {
                $("#klantenlijst").find("option").remove();
                $.each(data, function (index, value) {
                    $("#klantenlijst").append("<option class=klant> " + value.Naam + "</option>");
                })
            });
    }
</script>
<div class="container">
    @Scripts.Render("~/Scripts/changePass.js")
    <div class="row">
        <img class="foto" src="~/Content/img/moninfiets.png" />

    </div>

</div>
