@model Domain.Klant

@{
    ViewBag.Title = "Details Klant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        loadVMs();

    });

    function loadVMs() {
        if ($("#VmCheck").css("display") != "none") {
            $("#VmCheck").find("tr:not(:first)").remove();
            $("#VmCheck").hide();
        }
        $.ajax("/api/Klant/SSH/KlantOVMs", {
            type: "GET",
            dataType: "json"
        })
            .done(function (data) {
                $("#VmCheck").show();
                $.each(data, function (index, value) {
                    //searchOvmLijst(value,t)
                   // if (value.KlantId == 0) {
                        $("#VmCheck").append("<tr class=VmRow><td><input type=checkbox id=CheckVM name=chk_VM  value=" + "'" + value.id + "'" + "/>" + value.Name + "</tr></td>");//+"<br />");
                   // }
                })
            });
    }
    function SaveVms() {
        var t;
        var k = ($("td#email").text()).trim();
         //alert(k);
        $(".VmRow").each(function () {
           // alert($(this).children("td").find("#CheckVM").val());
            if ($(this).children("td").find("#CheckVM").is(":checked")) {
                t = $(this).children("td").find("#CheckVM").val();
               // alert("woeho" + t)
                //k = $(".klantEmail").val()
                $.ajax("/api/Klant/SSH/lijstcreate/" + t + "/" + k+"/", {
                    type: "GET",
                    dataType: "json"
                })
                    .done(function (data) {
                       // alert(data)
                        window.location.href = "/KlantAccount/Index";
                    })
            }

        });
        //loadVMs();
    }
</script>
<h2>Details</h2>
@Scripts.Render("~/Scripts/changePass.js")
<div>
    <h4>Klant</h4>
    <hr />
    <table class="dl-horizontal">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Naam)
            </td>

            <td id="naam">
                @Html.DisplayFor(model => model.Naam)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>

            <td id="email">
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
    </table>
</div>
<div id="KlantDiv">
    <table id="VmCheck" style="display:none">
        <tr><th>Virtuele machines</th></tr>
    </table>
    <div>
        <button class="btn btn-default" onclick="SaveVms()">Save</button>
    </div>
</div>
<p>
    @Html.ActionLink("Aanpassen", "Edit", new { id = Model.KlantId }) |
    @Html.ActionLink("Terug naar lijst", "Index")
</p>
