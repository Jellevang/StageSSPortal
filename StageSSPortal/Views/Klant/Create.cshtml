@model Domain.Klant

@{
    ViewBag.Title = "Nieuwe Klant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        loadVMs();

    });

    function loadVMs() {
        $("#VmCheck").hide();
        //var t;
        //$("tr.VmRow").each(function () {
        //    if ($(this).css('color') == "rgb(244, 78, 66)") {
        //        t = $(this).attr('id');
        $.ajax("/api/SSH/GetAllVmsDB", {
            type: "GET",
            dataType: "json"
        })
            .done(function (data) {
                $("#VmCheck").show();
                $.each(data, function (index, value) {
                    //searchOvmLijst(value,t)
                    if (value.KlantId == 0) {
                        $("#VmCheck").append("<tr class=VmRow><td><input class=" + value.Id + " type=checkbox id=CheckVM name=chk_VM  value=" + "'" + value.Name + "'" + "/>" + value.Name + "</tr></td>");//+"<br />");
                    }
                })
            });
    }
    function SaveVms() {
        var t;
        var k;
        $("input#CheckVm").each(function () {

            if ($(this).is(":checked")) {
                t = $(this).val()
                k = $(".klantEmail").val()
                $.ajax("/api/Klant/SSH/lijstcreate/" + t + "/" + k + "/", {
                    type: "GET",
                    dataType: "json"
                })
                    .done
            }
        })
        if ($(this).is(":checked") == false) {
            k = $(this).val()
            t = $(this).val()
            k = $(".klantEmail").val()
            $.ajax("/api/Klant/SSH/lijstDelete/" + t + "/" + k + "/", {
                type: "GET",
                dataType: "json"
            })
                .done
        }
    }
       
</script>
<h2>Nieuwe Klant</h2>


